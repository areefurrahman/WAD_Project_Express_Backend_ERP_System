    {
      "name": "Authentication",
      "icon": "fa-lock",
      "description": "User authentication and authorization",
      "apis": [
        {
          "id": "auth-register",
          "method": "POST",
          "endpoint": "/api/auth/register",
          "role": "PUBLIC",
          "description": "Register new user (Admin/Staff)",
          "requiresAuth": false,
          "requestBody": {
            "name": "Ahmed Ali",
            "email": "ahmed.ali@example.com",
            "password": "Ahmed@123",
            "role": "ADMIN"
          },
          "responseExample": {
            "message": "User registered successfully",
            "user": {
              "_id": "507f1f77bcf86cd799439011",
              "name": "Ahmed Ali",
              "email": "ahmed.ali@example.com",
              "role": "ADMIN",
              "isActive": true
            }
          }
        },
        {
          "id": "auth-login",
          "method": "POST",
          "endpoint": "/api/auth/login",
          "role": "PUBLIC",
          "description": "Login and get JWT token",
          "requiresAuth": false,
          "requestBody": {
            "email": "ahmed.ali@example.com",
            "password": "Ahmed@123"
          },
          "responseExample": {
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
            "user": {
              "_id": "507f1f77bcf86cd799439011",
              "name": "Ahmed Ali",
              "email": "ahmed.ali@example.com",
              "role": "ADMIN"
            }
          }
        },
        {
          "id": "auth-me",
          "method": "GET",
          "endpoint": "/api/auth/me",
          "role": "ALL",
          "description": "Get current logged-in user details",
          "requiresAuth": true,
          "responseExample": {
            "_id": "507f1f77bcf86cd799439011",
            "name": "Ahmed Ali",
            "email": "ahmed.ali@example.com",
            "role": "ADMIN",
            "isActive": true
          }
        }
      ]
    },
